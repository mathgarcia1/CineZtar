@model IEnumerable<Cine.Models.CinemaModel>
@{
    ViewData["Title"] = "listar";
}

<h1>Lista de Cinemas</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model.IdCinema)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Nome)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.TotalSalaCinema)</th>
            <th scope="col">Alterar</th>
            <th scope="col">Excluir</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.IdCinema</th>
                <td>@item.Nome</td>
                <td>@item.TotalSalaCinema</td>
                <td><a asp-controller="Cinema" asp-action="Index" asp-route-id="@item.IdCinema">Alterar</a></td>
                <td><a asp-controller="Cinema" asp-action="Excluir" asp-route-id="@item.IdCinema">Excluir</a></td>
            </tr>
        }
    </tbody>
</table>
