@model Cine.Models.IdiomaModel
@{
    ViewData["Title"] = "Cadastro Idioma";
}
<div class="formulario mx-auto d-grid gap-2">
    <h1 class="text-center fw-bold">Cadastro de Idiomas</h1>
    <form asp-controller="Idioma" asp-action="salvar" method="post">
        <div class="form-group">
            <input class="form-control" type="number" asp-for="IdIdioma" hidden />
            <span asp-validation-for="IdIdioma" class="validacao"></span>
        </div>
        <div class="form-group">
            <input class="form-control" type="text" asp-for="Nome" />
            <span asp-validation-for="Nome" class="validacao"></span>
        </div>
        <div class="form-group mb-4 mt-4">
            <span class="@ViewBag.classe">@ViewBag.mensagem</span>
        </div>
        <div class="form-group text-center ">
            <div class="col-xs-12 d-grid gap-2 ">
                <button type="submit" class="w-100 ">SALVAR</button>
            </div>
        </div>
    </form>
</div>