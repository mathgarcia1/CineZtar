@model IEnumerable<Cine.Models.IdiomaModel>
@{
    ViewData["Title"] = "listar";
}

<h1>Lista de Idiomas</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model.IdIdioma)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Nome)</th>
            <th scope="col">Alterar</th>
            <th scope="col">Excluir</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.IdIdioma</th>
                <td>@item.Nome</td>
                <td><a asp-controller="Idioma" asp-action="Index" asp-route-id="@item.IdIdioma">Alterar</a></td>
                <td><a asp-controller="Idioma" asp-action="Excluir" asp-route-id="@item.IdIdioma">Excluir</a></td>
            </tr>
        }
    </tbody>
</table>
