@model IEnumerable<CompraIngressoModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Minha Compra</h1>
<div class="col-12">
    <table class="table table-striped table-dark lista">
        <thead>
            <tr>
                <th scope="col">Ingresso</th>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col">Quantidade</th>
                <th scope="col"></th>
                <th scope="col">Valor</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr class="linhas">
                <td class="codigo">@item.IdCompraIngresso</td>
                <td>@item.IdIngresso</td>
                <td>
                    @item.ingresso.
                </td>
                <td>
                    <select class="quantidade">
                        @if (item.Quantidade == 1)
                        {
                            <option value="1" selected>1</option>
                        }
                        else
                        {
                            <option value="1">1</option>
                        }

                        @if (item.Quantidade == 2)
                        {
                            <option value="2" selected>2</option>
                        }
                        else
                        {
                            <option value="2">2</option>
                        }

                        @if (item.Quantidade == 3)
                        {
                            <option value="3" selected>3</option>
                        }
                        else
                        {
                            <option value="3">3</option>
                        }

                    </select>

                </td>
                <td>

                    <a href="~/Compra/excluirIngresso/@item.IdCompraIngresso">Remover</a>
                </td>
                <td class="tdvalor">R$ @item.Valor</td>
                <td><input type="hidden" class="total" value="@item.Valor"/></td>
            </tr>
            }
        </tbody>
    </table>

</div>
<div class="row justify-content-end">
    <div class="card" style="width: 18rem;">
        
        <div class="card-body">
            <h5 class="card-title">Total</h5>
            <p class="card-text" id="totalGeral">R$ 00,00</p>
            <a href="#" class="btn btn-primary">Finalizar</a>
        </div>
    </div>
</div>

<div class="row">
    <a href="~/Home/Index" class="btn btn-primary">Continuar comprando</a>
</div>
@section Scripts{ 
    <script>

        $(document).ready(function () {

            calculaTotal();

            $(".quantidade").change(function () {
                //$(this) => quem acionou o evento
                var quantidadeNova = $(this).val();
                //parent()=>retorna para elemento pai
                var id =
                    $(this).parent().parent().find(".codigo").text();
               
                alterarQuantidade(id, quantidadeNova);
            });

        });



        function alterarQuantidade(id, Quantidade) {

            $.ajax({
                type: "GET",
                url: "/Compra/alterarQuantidade?id=" + id +"&quantidade=" + quantidade,
                contentType: "application/json; charset=utf-8",
                data: "{}",
                dataType: "json",
                success: function (jsonResult) {
                    console.log(jsonResult);
                    $(".linhas").each(function (index, item) {
                        var codigotab = parseInt( $(item).find(".codigo").text());
                        if (codigotab == jsonResult.id) {

                            $(item).find(".total").val(jsonResult.valor);
                            $(item).find(".tdvalor").text("R$ " + jsonResult.valor);
                            calculaTotal();
                        }
                    });
                },
                failure: function (response) {
                    alert("Erro ao carregar os dados: " + response);
                }
}           );
        }


        function calculaTotal() {
            var total = 0;
            $('.total').each(function (index, item) {
                total+= parseFloat($(item).val());//input com classe .total
            });
            //parseFloat convert string em float
            //tag p que tem o total geral
            $("#totalGeral").text("R$ " + total);

        }

    </script>

}