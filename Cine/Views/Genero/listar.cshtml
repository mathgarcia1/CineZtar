@model IEnumerable<GeneroModel>
@{
    ViewData["Title"] = "Lista de GÃªneros";
}
<div class="tabela">
<h1>Lista de Generos de Filme</h1>
<div class="form-group mb-4 mt-3" id="divMensagem" >
    <span class="@ViewBag.classe" id="spanMensagem">@ViewBag.mensagem</span>
</div>
<script>

function confirmarExclusao(id) {
   if (confirm("Tem certeza que deseja excluir esse genero?")) {

       location.href ="/Genero/excluir/" + id;

   }
}
</script>
<div class="form-group mb-4 mt-3">
    <a href="~/Genero/cadastro" class="btnlink">Novo Genero</a>
</div>
<table class="table table-dark table-striped" >
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model.IdGenero)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Nome)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Descricao)</th>
            <th scope="col">Alterar</th>
            <th scope="col">Excluir</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.IdGenero</th>
                <td>@item.Nome</td>
                <td>@item.Descricao</td>
                <td>
                    <a href="~/Genero/prealterar/@item.IdGenero" class="btnlink">Alterar</a>
                </td>
                <td>
                    <a href="#" class="btnlink" onclick="confirmarExclusao(@item.IdGenero)">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

