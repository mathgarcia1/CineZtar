@model IEnumerable<Cine.Models.UsuarioModel>
@{
    ViewData["Title"] = "Lista de Usuários";
}

<div class="tabela">
<h1>Lista de Usuários</h1>
<div class="form-group mb-4 mt-3" id="divMensagem" >
    <span class="@ViewBag.classe" id="spanMensagem">@ViewBag.mensagem</span>
</div>
<script>

function confirmarExclusao(id) {
   if (confirm("Tem certeza que deseja excluir esse usuário?")) {

       location.href ="/Usuario/excluir/" + id;

   }
}

</script>
<div class="form-group mb-4 mt-3">
    <a href="~/Usuario/cadastro" class="btnlink">Novo Usuário</a>
</div>
 <table class="table table-dark table-striped" @*style="width: 1000px"*@> 
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model.IdUsuario)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Email)</th>
            <th scope="col">Tipo de Usuário</th>
            <th scope="col">Alterar</th>
            <th scope="col">Excluir</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.IdUsuario</th>
                <td>@item.Email</td>
                <td>@item.IdTipousuario</td>
                <td>
                    <a href="~/Usuario/prealterar/@item.IdUsuario" class="btnlink">Alterar</a>
                </td>
                <td>
                    <a href="#" class="btnlink" onclick="confirmarExclusao(@item.IdUsuario)">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
