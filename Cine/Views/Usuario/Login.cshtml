@model Cine.Models.UsuarioModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <title>Login</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login.css" />
</head>

<body>
    <div class="formulario  card-box">
        <form method="post" asp-controller="Usuario" asp-action="logar">
            <h2 class="text-center mt-4 font-weight-bold">LOGIN</h2>
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger" role="alert">
                    Email ou senha inv√°lidos
                </div>
            }
            </br>
            <div class="p-4">
                <div class="form-group">
                    @* <label for="Email">E-mail</label> *@
                    <input type="email" id="email" name="Email" asp-for="Email" required >
                </div>
                <div class="form-group">
                    @* <label for="Senha">Senha</label> *@
                    <input type="password" id="senha" name="Senha" asp-for="Senha" required>
                </div>
                @* <div class="form-group row">
                    <div class="col-sm-6 d-flex justify-content-between">
                        <button type="submit" class="mr-3">Entrar</button>
                        <a class="btnlink" asp-controller="Usuario" asp-action="cadastro">Cadastrar</a>
                    </div>
                </div> *@
                <div class="form-group text-center">
                    <div class="col-xs-12 d-grid gap-2">
                        <button type="submit" class="w-100">ENTRAR</button>
                        <a class="btnlink btn btn-link w-100" asp-controller="Usuario" asp-action="cadastro">CADASTRAR</a>
                    </div>
                </div>
                <span class="alert @ViewBag.classe">@ViewBag.mensagem</span>
            </div>

        </form>

    </div>

</body>

</html>
