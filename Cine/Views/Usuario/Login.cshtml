@model Cine.Models.UsuarioModel
<h2>Login</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger" role="alert">
        Email ou senha inv√°lidos
    </div>
}
<form method="post" asp-controller="Usuario" asp-action="Authenticate">
    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="email" class="form-control" asp-for="Email" id="email" name="Email" required>
    </div>
    <div class="form-group">
        <label for="senha">Senha</label>
        <input type="password" class="form-control" asp-for="Senha" id="senha" name="Senha" required>
    </div>
    <button type="submit" class="btn btn-primary">Entrar</button>
</form>