@model IngressoModel
@{
    ViewData["Title"] = "Detalhes";
}

<h1>@Model.IdFilme</h1>
<div class="col-md-6">
    <div class="card flex-md-row mb-4 shadow-sm h-md-250 tabela">
        <div class="card-body d-flex flex-column align-items-start">

            <h3 class="mb-0">
                <a class="text-light" >@Model.IdFilme</a>
            </h3>
            <div class="mb-1 text-muted">R$ @Model.Valor</div>
            <p class="card-text mb-auto">Este é um card maior com suporte à texto, em baixo, como uma introdução mais natural ao conteúdo adicional.</p>
            <a href="~/Compra/comprarIngresso/@Model.IdIngresso"
               class="btn btn-primary">
                Comprar
            </a>
        </div>
        <img src="@Url.Action("Imagem", "Filme", new { id = Model.IdFilme })" alt="Capa do Filme"
                 class="card-img-right flex-auto d-none d-lg-block" style="width: 200px; height: 250px;"/>
                
    </div>
</div>


