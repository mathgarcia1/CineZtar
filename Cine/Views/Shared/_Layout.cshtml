<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cine</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/formularios.css" />
    <link rel="stylesheet" href="~/css/navbar.css" />
    <link rel="stylesheet" href="~/css/listar.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" />
    <script src="https://kit.fontawesome.com/ef6b495730.js" crossorigin="anonymous"></script>
    <script src="~/js/site.js"></script>
</head>

<body id="body-pd">

    <header class="header" id="header">
        <div class="header_toggle"> <i class="fa-solid fa-bars fa-lg" id="header-toggle"></i> </div>
        <div class="header_img"> <img src="" alt=""> </div>
    </header>
    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div> <a href="#" class="nav_link"> <i class="fa-solid fa-star fa-xl" style="color: #000000;"></i> <span class="nav_logo-name">CineZtar</span></a>
                <div class="nav_list">
                    <a asp-controller="Home" asp-action="Index" class="nav_link"><!--fazer active-->
                        <i class="fa-solid fa-house fa-lg"></i>
                        <span class="nav_name">Inicio</span>
                    </a>
                    <a asp-controller="Usuario" asp-action="listar" class="nav_link">
                        <i class="fa-solid fa-user fa-lg"></i>
                        <span class="nav_name">Usuarios</span>
                    </a>
                    
                    <a asp-controller="Filme" asp-action="listar" class="nav_link">
                        <i class="fa-solid fa-clapperboard fa-lg"></i>
                        <span class="nav_name">Filmes</span>
                    </a>
                    
                    <a asp-controller="Genero" asp-action="listar" class="nav_link">
                        <i class="fa-solid fa-masks-theater fa-lg"></i>
                        <span class="nav_name">Genero</span>
                    </a>
                    <a asp-controller="Idioma" asp-action="listar" class="nav_link">
                        <i class="fa-solid fa-language fa-lg"></i>
                        <span class="nav_name">Idioma</span>
                    </a>
                </div>
            </div>
            <a class="nav_link" asp-controller="Usuario" asp-action="sair">
                <i class="fa-solid fa-right-from-bracket fa-xl"></i>
                <span class="nav_name">Sair</span> </a>
        </nav>
    </div>
    <!--Container Main start-->
    @* <div class="height-100"> testando*@
    <div class="h-100 w-100 p-3">
        <main role="main" class="mx-auto mt-3 " >
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/navbar.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
