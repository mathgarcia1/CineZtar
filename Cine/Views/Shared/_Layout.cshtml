<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cine</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/formularios.css" />
    <link rel="stylesheet" href="~/css/navbar.css" />
    <link rel="stylesheet" href="~/css/listar.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" />
</head>

<body id="body-pd">

    <header class="header" id="header">
        <div class="header_toggle"> <i class='bx bx-menu' id="header-toggle"></i> </div>
        <div class="header_img"> <img src="" alt=""> </div>
    </header>
    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div> <a href="#" class="nav_logo"> <i class='bx bx-layer nav_logo-icon'></i> <span
                        class="nav_logo-name">CineZtar</span> </a>
                <div class="nav_list">
                    <a asp-controller="Home" asp-action="Index" class="nav_link"><!--fazer active-->
                        <i class='bx bx-grid-alt nav_icon'></i>
                        <span class="nav_name">Inicio</span>
                    </a>
                    <a asp-controller="Usuario" asp-action="listar" class="nav_link">
                        <i class='bx bx-user nav_icon'></i>
                        <span class="nav_name">Usuarios</span>
                    </a>
                    
                    <a asp-controller="Filme" asp-action="listar" class="nav_link">
                        <i class='bx bx-bookmark nav_icon'></i>
                        <span class="nav_name">Filmes</span>
                    </a>
                    
                    <a asp-controller="Genero" asp-action="listar" class="nav_link">
                        <i class='bx bx-bar-chart-alt-2 nav_icon'></i>
                        <span class="nav_name">Genero</span>
                    </a>
                    <a asp-controller="Idioma" asp-action="listar" class="nav_link">
                        <i class='bx bx-bar-chart-alt-2 nav_icon'></i>
                        <span class="nav_name">Idioma</span>
                    </a>
                </div>
            </div>
            <a class="nav_link" asp-controller="Usuario" asp-action="sair">
                <i class='bx bx-log-out nav_icon'></i>
                <span class="nav_name">Sair</span> </a>
        </nav>
    </div>
    <!--Container Main start-->
    <div class="height-100">
        <main role="main" class="mx-auto">
            <br/>
            <br/>
            @RenderBody()
            <br/>
            <br/>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/navbar.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
