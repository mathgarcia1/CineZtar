@model Cine.Models.FilmeModel
@{
    ViewData["Title"] = "Index";
}

<div class="formulario">
    <h1>Cadastro de Filmes</h1>
    <form asp-controller="Filme" asp-action="Salvar" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <input class="form-control" type="number" asp-for="IdFilme" hidden />
            <span asp-validation-for="IdFilme" class="validacao"></span>
        </div>
        <div class="form-group">
            <label asp-for="Nome"></label>
            <input class="form-control" type="text" asp-for="Nome" />
            <span asp-validation-for="Nome" class="validacao"></span>
        </div>
        <div class="form-group">
            <label asp-for="Descricao"></label>
            <input class="form-control" type="text" asp-for="Descricao" />
            <span asp-validation-for="Descricao" class="validacao"></span>
        </div>
        <div class="form-group">
            <label asp-for="Duracao"></label>
            <input class="form-control" type="number" asp-for="Duracao" />
            <span asp-validation-for="Duracao" class="validacao"></span>
        </div>
        <div class="form-group">
            <label asp-for="AnoLancamento"></label>
            <input class="form-control" type="number" asp-for="AnoLancamento" />
            <span asp-validation-for="AnoLancamento" class="validacao"></span>
        </div>
        <div class="form-group">
            <label asp-for="IdIdioma" class="control-label"></label>
            <select asp-for="IdIdioma" class="options" asp-items="@(Model.IdiomasFilme ?? Enumerable.Empty<SelectListItem>())"></select>

        </div>
        <div class="form-group">
            <label asp-for="ImagemUpload" class="control-label"></label>
            <input type="file" asp-for="ImagemUpload"/>
        </div>
        
        

        <div class="form-group">
            <span>@ViewBag.Dados</span>
        </div>
        <div class="form-group">
            <button type="submit">Salvar</button>
        </div>
    </form>
</div>