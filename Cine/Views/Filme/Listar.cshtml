@model IEnumerable<Cine.Models.FilmeModel>
@{
    ViewData["Title"] = "listar";
}

<div class="tabela">
    <a class="btnlink" asp-controller="Filme" asp-action="Index">Novo</a>
    <br/>
    <br/>
    <h1>Lista de Filmes</h1>
    <table class="table table-dark lista">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.IdFilme)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Nome)</th>
                <th scope="col">Capa</th>
                <th scope="col">Alterar</th>
                <th scope="col">Excluir</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.IdFilme</th>
                    <td>@item.Nome</td>
                    <td>
                        @if (item.Imagem != null)
                        {
                            <img src="@Url.Action("Imagem", "Filme", new { id = item.IdFilme })" alt="Capa do Filme" class="img-thumbnail imgfilme" />
                        }
                    </td>
                    <td><a asp-controller="Filme" asp-action="Index" asp-route-id="@item.IdFilme">Alterar</a></td>
                    <td><a asp-controller="Filme" asp-action="Excluir" asp-route-id="@item.IdFilme">Excluir</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>